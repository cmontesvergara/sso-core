# ====================================
# APP CONFIGURATION
# ====================================
# Identificador único de tu aplicación (admin, crm, hr, analytics, etc.)
APP_ID=your_app_id

# Puerto donde correrá este backend
PORT=4300

# ====================================
# SSO CONFIGURATION
# ====================================
# URL del backend SSO (Identity Provider)
SSO_BACKEND_URL=http://localhost:3000

# ====================================
# FRONTEND CONFIGURATION
# ====================================
# URL del frontend de tu aplicación (donde corre Angular/React/Vue)
FRONTEND_URL=http://localhost:4200

# ====================================
# COOKIE CONFIGURATION
# ====================================
# Nombre de la cookie de sesión (debe ser único por app)
COOKIE_NAME=app_session

# Dominio de la cookie (usar .empire.com en producción para compartir entre subdominios)
COOKIE_DOMAIN=localhost

# Secure flag (true en producción con HTTPS)
COOKIE_SECURE=false

# SameSite policy (lax recomendado)
COOKIE_SAME_SITE=lax

# ====================================
# SESSION CONFIGURATION
# ====================================
# Duración de la sesión en milisegundos (24 horas = 86400000)
SESSION_MAX_AGE=86400000

# ====================================
# ENVIRONMENT
# ====================================
NODE_ENV=development
