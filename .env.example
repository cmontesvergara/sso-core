# Server Configuration
PORT=3567
HOST=localhost
NODE_ENV=development

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=u_sso
DB_USER=user
DB_PASSWORD=password

# Alternative full DATABASE_URL
# DATABASE_URL=postgres://user:password@localhost:5432/u_sso

# JWT Configuration
JWT_ISS=http://localhost:3567
JWT_AUD=u-sso-api
JWT_KID=sso-key-2025
PRIVATE_KEY_PATH=./keys/private.pem
PUBLIC_KEY_PATH=./keys/public.pem
ACCESS_TOKEN_VALIDITY=900
REFRESH_TOKEN_VALIDITY=2592000

# Session Configuration
SESSION_EXPIRY=3600
SESSION_REFRESH_THRESHOLD=600

# Email Configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE

# Rate limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Features
ENABLE_EMAIL_VERIFICATION=true
ENABLE_MFA=true
ENABLE_OAUTH=true
ENABLE_MULTITENANCY=true
