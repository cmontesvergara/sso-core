{
  "name": "bigso-sso-core",
  "version": "1.0.0",
  "description": "Open-source authentication provider - Node.js with Express implementation",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "migrate:create": "node scripts/migrate.js create",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "seed:complete": "node scripts/seed-complete.js",
    "seed:preprod": "node scripts/seed-preprod.js",
    "prisma:generate": "prisma generate",
    "prisma:format": "prisma format",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "authentication",
    "auth",
    "session-management",
    "oauth",
    "passwordless",
    "bigso-sso",
    "express"
  ],
  "author": "BigSo",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/node-jose": "^1.1.13",
    "@types/pg": "^8.16.0",
    "argon2": "^0.30.0",
    "axios": "^1.6.5",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "node-jose": "^2.2.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "resend": "^6.7.0",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.6",
    "twilio": "^3.84.1",
    "uuid": "^9.0.1",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@types/cookie": "^0.5.4",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.5",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^7.8.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}